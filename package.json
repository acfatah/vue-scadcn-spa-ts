{
  "name": "vue-shadcn-ts",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/acfatah/vue-shadcn-ts.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint",
    "lint:changed": "eslint --no-warn-ignored $(git diff --name-only --diff-filter=d HEAD)",
    "lint:staged": "eslint --no-warn-ignored $(git diff --cached --name-only --diff-filter=d)",
    "lint:fix": "npm run lint:changed -- --fix",
    "lint:inspect": "npx eslint --inspect-config",
    "precommit": "npm run lint:staged",
    "check-updates": "npx npm-check-updates --target semver",
    "update-deps": "npm run check-updates -- -u && npm install && npm audit fix",
    "generate": "cross-env NODE_OPTIONS='--import tsx' plop --plopfile=.templates/generator.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-icons/vue": "^1.0.0",
    "@tanstack/vue-table": "^8.20.5",
    "@unovis/ts": "^1.5.0",
    "@unovis/vue": "^1.5.0",
    "@vee-validate/zod": "^4.15.0",
    "@vueuse/core": "^12.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-vue": "^8.5.2",
    "pinia": "^2.3.1",
    "radix-vue": "^1.9.12",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "v-calendar": "^3.1.2",
    "vaul-vue": "^0.2.0",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-sonner": "^1.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@chromatic-com/storybook": "^3.2.4",
    "@storybook/addon-essentials": "^8.5.1",
    "@storybook/addon-interactions": "^8.5.1",
    "@storybook/addon-links": "^8.5.1",
    "@storybook/addon-onboarding": "^8.5.1",
    "@storybook/addon-themes": "^8.5.1",
    "@storybook/blocks": "^8.5.1",
    "@storybook/manager-api": "^8.5.1",
    "@storybook/test": "^8.5.1",
    "@storybook/theming": "^8.5.1",
    "@storybook/vue3": "^8.5.1",
    "@storybook/vue3-vite": "^8.5.1",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-format": "^0.1.3",
    "eslint-plugin-storybook": "^0.11.2",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "lucide-vue-next": "^0.468.0",
    "plop": "^4.0.1",
    "postcss": "^8.5.1",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.5.1",
    "storybook-vue3-router": "^5.0.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "unplugin-auto-import": "^0.19.0",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^6.0.11",
    "vue-tsc": "^2.2.0"
